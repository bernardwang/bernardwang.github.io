$(document).ready(function(){
    /*fades in face bubble when when the page loads*/

    $('#face').hide().fadeIn(1000);

    $('#face').mouseenter(function() {

	$('#face').animate({
	    width:'165px',
	    height:'165px',
	},'fast',function(){
	});

	$('.arrow img').toggle(200);
	
    });
    $('#face').mouseleave(function() {
	$('#face').animate({
	    width:'150px',
	    height:'150px',
	},'fast',function(){
        });

	$('.arrow img').toggle(200);

    });
    

});
